#export PATH="/usr/local/opt/openjdk@8/bin:$PATH"

# 配置Java8的家目录
export JAVA_HOME=$(/usr/libexec/java_home -v1.8)
# 配置别名，方便快速切换
export PATH=$JAVA_HOME/bin:$PATH:.
export CLASSPATH=$CLASSPATH:$JAVA_HOME/lib

bindkey ',' autosuggest-accept
